# ========================================
# RAG Chatbot Environment Configuration
# ========================================
# Copy this file to .env and update the values
# This file contains all configuration options for the RAG chatbot

# ========================================
# REQUIRED CONFIGURATION
# ========================================

# API Keys (REQUIRED)
GROQ_API_KEY=your_groq_api_key_here

# ========================================
# MODEL CONFIGURATION
# ========================================

# Embedding Model (for document vectorization)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Model (for generating responses)
LLM_MODEL=llama-3.3-70b-versatile

# Vector dimensions (must match embedding model)
VECTOR_SIZE=384

# ========================================
# VECTOR DATABASE CONFIGURATION
# ========================================

# Collection name for storing document vectors
COLLECTION_NAME=documents

# Qdrant mode: ":memory:" for temporary, "localhost:6333" for persistent
QDRANT_MODE=:memory:

# ========================================
# SEARCH CONFIGURATION
# ========================================

# Number of relevant documents to retrieve
SEARCH_LIMIT=5

# ========================================
# FILE CONFIGURATION
# ========================================

# Default PDF file path (relative to project root)
PDF_PATH=pdf/จังหวัดน่าน.pdf

# ========================================
# SYSTEM BEHAVIOR
# ========================================

# System message for the AI assistant
SYSTEM_MESSAGE=คุณเป็นผู้ช่วยที่เชี่ยวชาญเกี่ยวกับข้อมูลในเอกสาร จงตอบคำถามอย่างกระชับและถูกต้อง

# ========================================
# LANGCHAIN CONFIGURATION
# ========================================

# Document chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Text splitting method
TEXT_SPLITTER_METHOD=recursive

# Vector store type
VECTOR_STORE_TYPE=qdrant

# QA chain type
QA_CHAIN_TYPE=stuff

# ========================================
# DOCLING CONFIGURATION
# ========================================

# Enable OCR for scanned documents
ENABLE_OCR=true

# Enable table extraction from PDFs
ENABLE_TABLE_EXTRACTION=true

# ========================================
# ADVANCED FEATURES
# ========================================

# Enable conversation memory
ENABLE_CONVERSATION_MEMORY=true

# Maximum conversation history to keep
MAX_CONVERSATION_HISTORY=10

# ========================================
# NOTES
# ========================================
# - GROQ_API_KEY is the only required variable
# - All other variables have sensible defaults
# - For production, consider using persistent QDRANT_MODE
# - Adjust CHUNK_SIZE and SEARCH_LIMIT based on your needs
# - SYSTEM_MESSAGE can be customized for different use cases